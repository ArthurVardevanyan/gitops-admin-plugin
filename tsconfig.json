{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "paths": {
        "@utils/*": ["src/utils/*"],
        "@gitops-utils/*": ["src/gitops/utils/*"],
        "@gitops-shared/*": ["src/gitops/components/shared/*"],
        "@gitops-models/*": ["src/gitops/models/*"],
        "@gitops-services/*": ["src/gitops/services/*"],
        "@rollout-models/*": ["src/rollout/models/*"],
        "@rollout-services/*": ["src/rollout/services/*"],
        "@es-models/*": ["src/externalsecrets/models/*"],
        "@cert-models/*": ["src/certificates/models/*"],
        "@cr-models/*": ["src/certificaterequests/models/*"],
        "@images/*": ["src/images/*"],
        "react": [ "./node_modules/@types/react" ]
      }
  },
  "exclude": ["**/node_modules", "**/dist"],
  "include": ["src"]
}
